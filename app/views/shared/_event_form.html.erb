<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  


  <div class="field">
	<%= f.label :title %>
    <%= f.text_field :event_title %>
  </div>

 <div class="field">
	<%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Post!" %>
  </div>
<% end %>